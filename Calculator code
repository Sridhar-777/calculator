    <style>
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f0f0f0;
      }
      .calculator {
        width: 300px;
        height: 400px;
        background-color: #444;
        border-radius: 20px;
        padding: 20px;
        perspective: 1000px;
      }
      .screen {
        height: 80px;
        background-color: #333;
        color: white;
        text-align: right;
        padding: 10px;
        border-radius: 10px;
        margin-bottom: 10px;
      }
      .keys {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
      }
      .key {
        background-color: #888;
        color: white;
        border: none;
        font-size: 20px;
        padding: 15px;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      .key:hover {
        background-color: #666;
      }
    </style>
    </head>
    <body>
    <div class="calculator">
      <div class="screen" id="screen">0</div>
      <div class="keys">
        <button class="key" onclick="appendToScreen('7')">7</button>
        <button class="key" onclick="appendToScreen('8')">8</button>
        <button class="key" onclick="appendToScreen('9')">9</button>
        <button class="key" onclick="appendToScreen('/')">/</button>
        <button class="key" onclick="appendToScreen('4')">4</button>
        <button class="key" onclick="appendToScreen('5')">5</button>
        <button class="key" onclick="appendToScreen('6')">6</button>
        <button class="key" onclick="appendToScreen('*')">*</button>
        <button class="key" onclick="appendToScreen('1')">1</button>
        <button class="key" onclick="appendToScreen('2')">2</button>
        <button class="key" onclick="appendToScreen('3')">3</button>
        <button class="key" onclick="appendToScreen('-')">-</button>
        <button class="key" onclick="appendToScreen('0')">0</button>
        <button class="key" onclick="appendToScreen('.')">.</button>
        <button class="key" onclick="clearScreen()">C</button>
        <button class="key" onclick="calculate()">=</button>
        <button class="key" onclick="appendToScreen('+')">+</button>
      </div>
    </div>
    
    <script>
      function appendToScreen(value) {
        document.getElementById('screen').innerText += value;
      }
      
      function clearScreen() {
        document.getElementById('screen').innerText = '';
      }
      
      function calculate() {
        var expression = document.getElementById('screen').innerText;
        var result = eval(expression);
        document.getElementById('screen').innerText = result;
      }
    </script>
